<Window x:Class="Progress_Bars.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Progress_Bars"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <TextBlock HorizontalAlignment="Left" Margin="114,0,0,0">Item</TextBlock>
        <ProgressBar Name="itemBar" HorizontalAlignment="Center" Height="20" Margin="10,2,0,0" VerticalAlignment="Top" Width="300" Background="#FFB4B4B4"/>
        
        <TextBlock HorizontalAlignment="Left" Margin="114,15,0,0">Tenge</TextBlock>
        <Slider Name="tengeSlider" Margin="115,0,98,0" ValueChanged="TengeSlider_ValueChanged" Maximum="100" />

        <TextBlock HorizontalAlignment="Left" Margin="114,15,0,0">BitCoint</TextBlock>
        <Slider Name="bitSlider" Margin="115,0,98,0" ValueChanged="BitSlider_ValueChanged" Maximum="100" />
    </StackPanel>
</Window>
